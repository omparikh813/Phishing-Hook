{
  "manifest_version": 3,
  "name": "Phishing Hook",
  "description": "Scan the currently-open Gmail message and get a concise phishing digest.",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://mail.google.com/*",
    "https://phishing-hook.onrender.com/"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Phishing Hook"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["content_script.js"],
      "run_at": "document_idle"
    }
  ]
}
